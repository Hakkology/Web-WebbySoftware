@model WebbySoftware.Application.DevOperations.Queries.DevelopmentViewModel
    

@{
    ViewData["Title"] = "Home";
}

<!-- ======= Hero Section ======= -->
<section id="hero">

    <div class="container">
        <div class="row">
            <div class="col-lg-6 pt-5 pt-lg-0 order-2 order-lg-1 d-flex flex-column justify-content-center" data-aos="fade-up">
                <div>
                    <h1>We design digital products that help grow businesses</h1>
                    <h2>We are a versatile team of designers and developers with expertise in software development. Our focus is to challenge ourselves to create better products for more challenging problems.</h2>
                    <a href="#portfolio" class="btn-get-started scrollto">Check our Projects!</a>
                </div>
            </div>
            <div class="col-lg-6 order-1 order-lg-2 hero-img" data-aos="fade-left">
                <img src="~/assets/img/hero-img.png" class="img-fluid" alt="">
            </div>
        </div>
    </div>

</section><!-- End Hero -->

<main id="main">

<!-- ======= Services Section ======= -->
<section id="services" class="services section-bg">
    <div class="container">

        <div class="section-title" data-aos="fade-up">
            <h2>Services</h2>
            <p>At WebbySoftware, we endeavor to offer comprehensive, customized, and cutting-edge solutions for all your software development needs. We do our best to make good applications on gaming, web or mobile applications, utilizing the latest technology trends.</p>
        </div>

        <div class="row">
            <div class="col-md-6 col-lg-3 d-flex align-items-stretch mb-5 mb-lg-0" data-aos="zoom-in">
                <div class="icon-box icon-box-pink">
                    <div class="icon"><i class="bx bx-paint"></i></div>
                    <h4 class="title"><a href="@Url.Action("MobileAppDevelopment", "Home")" class="text-primary">Mobile App Development</a></h4>
                    <p class="description">We bring your unique ideas to life with our expertise in developing visually stunning and interactive applications.</p>
                </div>
            </div>

            <div class="col-md-6 col-lg-3 d-flex align-items-stretch mb-5 mb-lg-0" data-aos="zoom-in" data-aos-delay="100">
                <div class="icon-box icon-box-cyan">
                    <div class="icon"><i class="bx bx-code"></i></div>
                    <h4 class="title"><a href="@Url.Action("WebDevelopment", "Home")" class="text-primary">Web Development</a></h4>
                    <p class="description">We also offer web develeopment solutions to our partners and customers so that they can sell, display or promote their efforts and products through web.</p>
                </div>
            </div>

            <div class="col-md-6 col-lg-3 d-flex align-items-stretch mb-5 mb-lg-0" data-aos="zoom-in" data-aos-delay="200">
                <div class="icon-box icon-box-green">
                    <div class="icon"><i class="bx bx-game"></i></div>
                    <h4 class="title"><a href="@Url.Action("GameDevelopment", "Home")" class="text-primary">Game Development</a></h4>
                    <p class="description">We also offer game development solutions to our customers and make our own indie games for showcasing.</p>
                </div>
            </div>

            <div class="col-md-6 col-lg-3 d-flex align-items-stretch mb-5 mb-lg-0" data-aos="zoom-in" data-aos-delay="300">
                <div class="icon-box icon-box-blue">
                    <div class="icon"><i class="bx bx-wrench"></i></div>
                    <h4 class="title"><a href="@Url.Action("Contact", "Home")" class="text-primary">Maintenance and Support</a></h4>
                    <p class="description">Feel free to contact us for all your software needs for support or maintanence.</p>
                </div>
            </div>

        </div>

    </div>
</section>
<!-- End Services Section -->


<!-- ======= Portfolio Section ======= -->
<section id="portfolio" class="portfolio">
    <div class="container">

        <div class="section-title" data-aos="fade-up">
            <h2>Portfolio</h2>
            <p>List of our works is given below. Details can be accessed through development page.</p>
        </div>

        <div class="row">
            <div class="col-lg-12 d-flex justify-content-center" data-aos="fade-up" data-aos-delay="100">
                <ul id="portfolio-flters">
                    <li data-filter="*" class="filter-active">All</li>
                    <li data-filter=".filter-game">Games</li>
                    <li data-filter=".filter-mobile">MobileApps</li>
                    <li data-filter=".filter-web">WebApps</li>
                </ul>
            </div>
        </div>

        <div class="row portfolio-container" data-aos="fade-up" data-aos-delay="200">
            @foreach (var item in Model.GameQuickViewModels)
            {
                <div class="col-lg-4 col-md-6 portfolio-item filter-app filter-game">
                    <div class="portfolio-wrap">
                        @if (item.Thumbnails.Count > 0)
                        {
                            <img src="@Url.Content(item.Thumbnails[0])" class="img-fluid" alt="">
                        }
                        else
                        {
                            <img src="~/assets/img/portfolio/27230.jpg" class="img-fluid" alt="Placeholder">
                        }
                        <div class="portfolio-info">
                            <h4>@item.ProjectName</h4>
                        </div>
                        <div class="portfolio-links">
                            @if (item.Thumbnails.Count > 0)
                            {
                                <a href="@Url.Content(item.Thumbnails[0])" data-gallery="portfolioGallery" class="portfolio-lightbox" title="@item.ProjectName"><i class="bx bx-plus"></i></a>
                            }
                            <a href="@Url.Action("GameDevelopment", "Home", new { searchedTag = item.ProjectName })" title="More Details" title="More Details"><i class="bx bx-link"></i></a>
                        </div>
                    </div>
                </div>
            }


            @foreach (var item in Model.WebQuickViewModels)
            {
                <div class="col-lg-4 col-md-6 portfolio-item filter-app filter-web">
                    <div class="portfolio-wrap">
                        @if (item.Thumbnails.Count > 0)
                        {
                            <img src="@Url.Content(item.Thumbnails[0])" class="img-fluid" alt="">
                        }
                        else
                        {
                            <img src="~/assets/img/portfolio/27230.jpg" class="img-fluid" alt="Placeholder">
                        }
                        <div class="portfolio-info">
                            <h4>@item.ProjectName</h4>
                        </div>
                        <div class="portfolio-links">
                            @if (item.Thumbnails.Count > 0)
                            {
                                <a href="@Url.Content(item.Thumbnails[0])" data-gallery="portfolioGallery" class="portfolio-lightbox" title="@item.ProjectName"><i class="bx bx-plus"></i></a>
                            }
                            <a href="@Url.Action("WebDevelopment", "Home", new { searchedTag = item.ProjectName })" title="More Details"><i class="bx bx-link"></i></a>
                        </div>
                    </div>
                </div>
            }

            @foreach (var item in Model.MobileAppQuickViewModels)
            {
                <div class="col-lg-4 col-md-6 portfolio-item filter-app filter-mobile">
                    <div class="portfolio-wrap">
                        @if (item.Thumbnails.Count > 0)
                        {
                            <img src="@Url.Content(item.Thumbnails[0])" class="img-fluid" alt="">
                        }
                        else
                        {
                            <img src="~/assets/img/portfolio/27230.jpg" class="img-fluid" alt="Placeholder">
                        }
                        <div class="portfolio-info">
                            <h4>@item.ProjectName</h4>
                        </div>
                        <div class="portfolio-links">
                            @if (item.Thumbnails.Count > 0)
                            {
                                <a href="@Url.Content(item.Thumbnails[0])" data-gallery="portfolioGallery" class="portfolio-lightbox" title="@item.ProjectName"><i class="bx bx-plus"></i></a>
                            }
                            <a href="@Url.Action("MobileAppDevelopment", "Home", new { searchedTag = item.ProjectName })" title="More Details"><i class="bx bx-link"></i></a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    </section><!-- End Portfolio Section -->

