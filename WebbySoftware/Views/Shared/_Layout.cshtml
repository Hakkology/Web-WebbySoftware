        <script>
            document.addEventListener('DOMContentLoaded', function () {
                var projectSliders = document.querySelectorAll('.splide');

                projectSliders.forEach(function (slider) {
                var main = new Splide(slider.querySelector('.main-slider'), {
                    type: 'fade',
                    heightRatio: 0.5,
                    pagination: false,
                    arrows: false,
                    cover: true,
                });

                var thumbnails = new Splide(slider.querySelector('.thumbnail-slider'), {
                    rewind: true,
                    fixedWidth: 104,
                    fixedHeight: 58,
                    isNavigation: true,
                    gap: 10,
                    focus: 'center',
                    pagination: false,
                    cover: true,
                    dragMinThreshold: {
                    mouse: 4,
                    touch: 10,
                    },
                    breakpoints: {
                    640: {
                        fixedWidth: 66,
                        fixedHeight: 38,
                    },
                    },
                });

                main.sync(thumbnails);
                main.mount();
                thumbnails.mount();
                });
            });
        </script>

        <script>
            document.addEventListener('DOMContentLoaded', function () {
                var thumbnailSliders = document.querySelectorAll('.splide');

                thumbnailSliders.forEach(function (slider) {
                    new Splide(slider, {
                        // Splide options can be added here
                        type: 'loop',
                        perPage: 1,
                        autoplay: true,
                        interval: 3000
                    }).mount();
                });
            });
        </script>

